<section class="watch-head" data-video-id="<%= data.videoId %>" data-title="<%= data.title %>">
  <div class="watch-meta">
    <div>
      <h1 id="watch-title"><%= data.title %></h1>
    </div>
  </div>
  <div class="watch-actions">
    <div class="quality-picker">
      <label for="watch-quality">Resolusi</label>
      <select id="watch-quality" class="quality-select">
        <option value="">Auto</option>
      </select>
    </div>
    <a class="back-link" href="/">Kembali</a>
  </div>
</section>

<section class="player-wrap" data-video-id="<%= data.videoId %>" data-title="<%= data.title %>">
  <video id="player" controls autoplay playsinline>
    <source src="/api/stream?video_id=<%= data.videoId %>" type="video/mp4" />
    Browser kamu tidak mendukung video HTML5.
  </video>
  <div class="player-overlay" id="player-overlay">Memuat video...</div>
</section>
