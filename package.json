{
  "name": "dramahub-proxy",
  "version": "1.0.0",
  "description": "Express.js fullstack proxy + web streaming",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "build": "npm run client:build",
    "postinstall": "npm --prefix client install",
    "client:dev": "npm --prefix client run dev",
    "client:build": "npm --prefix client run build"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "http-proxy-middleware": "^3.0.5"
  }
}
